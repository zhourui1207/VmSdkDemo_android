<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jxlianlian.vmnetsdktest.MainActivity">

  <TextView
      android:id="@+id/sample_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Hello World!"/>

  <SurfaceView
      android:layout_width="120dp"
      android:layout_height="90dp"
      android:layout_marginTop="0dp"
      android:layout_alignParentLeft="true"
      android:id="@+id/surfaceView4"/>

  <SurfaceView
      android:layout_width="120dp"
      android:layout_height="90dp"
      android:layout_marginTop="5dp"
      android:layout_below="@+id/surfaceView"
      android:layout_alignParentLeft="true"
      android:id="@+id/surfaceView2"/>

  <SurfaceView
      android:layout_width="120dp"
      android:layout_height="90dp"
      android:layout_marginTop="5dp"
      android:layout_below="@+id/surfaceView2"
      android:layout_alignParentLeft="true"
      android:id="@+id/surfaceView3"/>

  <!--<android.opengl.GLSurfaceView-->
      <!--android:layout_width="match_parent"-->
      <!--android:layout_height="200dp"-->
      <!--android:layout_marginTop="20dp"-->
      <!--android:layout_alignParentLeft="true"-->
      <!--android:id="@+id/glSurfaceView"/>-->

  <Button
      android:text="播放声音"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/surfaceView3"
      android:layout_toRightOf="@+id/sample_text"
      android:layout_marginLeft="29dp"
      android:layout_marginTop="5dp"
      android:id="@+id/button"/>

  <Button
      android:text="开始录像"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/button"
      android:layout_alignLeft="@+id/button"
      android:layout_marginTop="5dp"
      android:id="@+id/record"/>

  <SurfaceView
      android:layout_width="100dp"
      android:layout_height="90dp"
      android:id="@+id/surfaceView6"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"/>


  <SurfaceView
      android:layout_width="120dp"
      android:layout_height="90dp"
      android:id="@+id/surfaceView9"
      android:layout_alignTop="@+id/surfaceView2"
      android:layout_alignLeft="@+id/surfaceView6"
      android:layout_toLeftOf="@+id/surfaceView"/>

  <SurfaceView
      android:layout_width="120dp"
      android:layout_height="90dp"
      android:id="@+id/surfaceView5"
      android:layout_above="@+id/button"
      android:layout_alignLeft="@+id/surfaceView9"/>

  <SurfaceView
      android:layout_width="120dp"
      android:layout_height="90dp"
      android:id="@+id/surfaceView8"
      android:layout_alignTop="@+id/surfaceView9"
      android:layout_alignParentRight="true"/>

  <SurfaceView
      android:layout_width="120dp"
      android:layout_height="90dp"
      android:id="@+id/surfaceView"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"/>

  <SurfaceView
      android:layout_width="100dp"
      android:layout_height="90dp"
      android:id="@+id/surfaceView7"
      android:layout_alignTop="@+id/surfaceView5"
      android:layout_alignParentRight="true"/>
</RelativeLayout>
